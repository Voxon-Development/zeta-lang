package zeta.lang

struct Ptr<T>(usize raw) {
    inline Ptr<T> new(T value) = Ptr(intrinsics::ptr_cast_to_raw(this))

    inline Ptr<T> fromAddr(usize addr) = intrinsics::ptr_from_addr<T>(this)

    unsafe inline Ptr<T> add<T>(this, usize bytes) = intrinsics::ptr_add<T>(this, bytes)

    inline T deref(this) = intrinsics::ptr_deref<T>(this)

    inline void store(mut this, T value) = intrinsics::ptr_store<T>(this, value)

    inline usize addr(this) = intrinsics::ptr_addr<T>(this)
}